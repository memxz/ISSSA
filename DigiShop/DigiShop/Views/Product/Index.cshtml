@model IEnumerable<Product>

@{
        ViewData["Title"] = "Products";
}

<h1>Products</h1>

<div class="row">
        @foreach (var item in Model)
        {
                <div class="col-4">
                       @* <img src="@item.productIMG" class="img-fluid" alt="" />*@
                        <h4>@item.productName</h4>
                        <div>
                                @Html.Raw(item.productDesc)
                        </div>
                        <p>
                                @item.productPrice.ToString("C2")
                        </p>
                        <p>
                                <a class="btn btn-primary" asp-controller="Cart" asp-action="Add" asp-route-id="@item.productId">Add to cart</a>
                        </p>
                </div>
        }


        

</div>
